<launch>
   <arg name="rviz" default="true" />  
   <!-- <include file="$(find act_map_ros)/launch/external/euroc_stereo_vio.launch" /> -->

   <include file="$(find act_map_ros)/launch/external/voxblox.launch" />

   <node name="act_map" pkg="act_map_ros" type="trace_map_server_node" output="screen" args="-alsologtostderr --v=1" clear_params="true">
     <rosparam command="load" file="$(find act_map_ros)/params/nrsl_d435i.yaml"/>
     <param name="features3d_topic_name" value="/vins_estimator/point_cloud" />
     <param name="body_pose_topic_name" value="/vins_estimator/camera_pose" />
   </node>

   <node type="rviz" name="rviz" pkg="rviz" args="-d $(find act_map_ros)/cfgs/full_exp_mesh.rviz" if="$(arg rviz)"/>

</launch>
